  "type": "module",
  "scripts": {
    "build": "tsc && cp src/db/schema.sql dist/db/ && (cp src/config/agents.yaml dist/config/ || echo 'Warning: agents.yaml not found, using default configuration')",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "validate:env": "tsx src/scripts/validate-env.ts",
    "migrate": "tsx src/scripts/migrate.ts"
  },
  "dependencies": {
    "@autonomys/auto-dag-data": "^1.1.2",
    "@autonomys/auto-drive": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "openai": "^4.80.1",
    "pako": "^2.1.0",
    "pg": "^8.13.1",
    "winston": "^3.17.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4",
    "js-yaml": "^4.1.0",
    "@types/js-yaml": "^4.0.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@types/pako": "^2.0.3",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.3",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.7.2"
  }
