{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "core",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "core/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "examples"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifiers": true
    }
}